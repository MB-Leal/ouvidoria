<?php

namespace Database\Seeders;

use App\Models\User;
use Illuminate\Database\Seeder;
use Illuminate\Support\Facades\Hash;
use Spatie\Permission\Models\Role;
use Spatie\Permission\Models\Permission;

class RolesAndUsersSeeder extends Seeder
{
    public function run(): void
    {
        // Reset cached roles and permissions
        app()[\Spatie\Permission\PermissionRegistrar::class]->forgetCachedPermissions();

        // Criar permissões
        $permissions = [
            'visualizar_manifestacoes',
            'responder_manifestacoes',
            'atribuir_manifestacoes',
            'arquivar_manifestacoes',
            'gerar_relatorios',
            'gerenciar_usuarios',
            'configurar_sistema',
        ];

        foreach ($permissions as $permission) {
            Permission::create(['name' => $permission]);
        }

        // Criar roles
        $roleAdmin = Role::create(['name' => 'admin']);
        $roleOuvidor = Role::create(['name' => 'ouvidor']);
        $roleSecretario = Role::create(['name' => 'secretario']);

        // Atribuir permissões ao admin (todas)
        $roleAdmin->givePermissionTo(Permission::all());

        // Atribuir permissões ao ouvidor
        $roleOuvidor->givePermissionTo([
            'visualizar_manifestacoes',
            'responder_manifestacoes',
            'atribuir_manifestacoes',
            'arquivar_manifestacoes',
            'gerar_relatorios',
        ]);

        // Atribuir permissões ao secretário
        $roleSecretario->givePermissionTo([
            'visualizar_manifestacoes',
            'responder_manifestacoes',
        ]);

        // Criar usuário admin
        $admin = User::create([
            'name' => 'Administrador',
            'email' => 'admin@faspmpa.com.br',
            'password' => Hash::make('admin123'),
            'ativo' => true,
        ]);
        $admin->assignRole('admin');

        // Criar usuário ouvidor
        $ouvidor = User::create([
            'name' => 'Ouvidor',
            'email' => 'ouvidor@faspmpa.com.br',
            'password' => Hash::make('ouvidor123'),
            'ativo' => true,
        ]);
        $ouvidor->assignRole('ouvidor');

        // Criar usuário secretário
        $secretario = User::create([
            'name' => 'Secretário',
            'email' => 'secretario@faspmpa.com.br',
            'password' => Hash::make('secretario123'),
            'ativo' => true,
        ]);
        $secretario->assignRole('secretario');

        $this->command->info('Roles e usuários criados com sucesso!');
    }
}